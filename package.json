{
  "name": "typescript-node-starter",
  "version": "1.0.0",
  "description": "A baseline Node/Typescript project using ESLint and Jest",
  "author": "Joe Hillenbrand",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "dev": "nodemon --exec ts-node src/index.ts --watch src",
    "fmt": "prettier --write **/*.ts",
    "lint": "eslint --ext ts src",
    "lint:fix": "eslint --fix --ext ts src",
    "start": "node dist/index.js",
    "test": "ts-mocha src/**/*.spec.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist/"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.5.0",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "npm-check-updates": "^12.0.5",
    "prettier": "^2.5.1",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.5.4"
  }
}
