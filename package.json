{
  "name": "typescript-node-starter",
  "version": "1.0.0",
  "description": "A baseline Node/Typescript project using ESLint and Jest",
  "author": "Joe Hillenbrand",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "dev": "nodemon --exec ts-node src/index.ts --watch src",
    "fmt": "prettier --write **/*.ts",
    "lint": "eslint --ext ts src",
    "lint:fix": "eslint --fix --ext ts src",
    "start": "node dist/index.js",
    "test": "ts-mocha src/**/*.spec.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist/"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/mocha": "^7.0.1",
    "@types/node": "^13.7.4",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "mocha": "^7.0.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-mocha": "^6.0.0",
    "typescript": "^3.8.2"
  }
}
